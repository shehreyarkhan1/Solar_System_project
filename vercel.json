{
  "version": 2,
  "builds": [
    {
      "src": "manage.py",
      "use": "@vercel/python",
      "config": {
        "runtime": "python3.12",
        "maxLambdaSize": "50mb"
      }
    },
    {
      "src": "staticfiles/**",
      "use": "@vercel/static"
    },
    {
      "src": "media/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/static/(.*)",
      "dest": "/staticfiles/$1"
    },
    {
      "src": "/media/(.*)",
      "dest": "/media/$1"
    },
    {
      "src": "/(.*)",
      "dest": "manage.py"
    }
  ],
  "env": {
    "DEBUG": "False",
    "SECRET_KEY": "your-secret-key",
    "ALLOWED_HOSTS": ".vercel.app",
    "DATABASE_URL": "your-postgres-url"
  },
  "buildCommand": "python manage.py collectstatic --noinput"
}
